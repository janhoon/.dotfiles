source ~/.znap/zsh-snap/znap.zsh
export ZSH="/home/jan/.oh-my-zsh"
ZSH_THEME="robbyrussell"

plugins=(git)

source $ZSH/oh-my-zsh.sh

alias vim=nvim.appimage
alias sleeplock="i3lock && echo mem > /sys/power/state"

znap source marlonrichert/zsh-autocomplete
znap source zsh-users/zsh-autosuggestions

export GOBIN=$HOME/go/bin
export PATH=$PATH:$GOBIN
export PATH=$PATH:/usr/local/go/bin

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/jan/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/jan/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/home/jan/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/jan/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
